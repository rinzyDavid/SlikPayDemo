<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.intro.SplashScreen"
    android:background="@color/white">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/slik_logo" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/powered_by"
            android:layout_width="wrap_content"


            android:layout_height="wrap_content"
            android:fontFamily="@font/titillium_web_semibold"
            android:text="@string/powered_by"
            android:textColor="@color/primaryTextDark" />
        <ImageView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/payoneer_logo"

            app:srcCompat="@drawable/payoneer_logo" />


    </LinearLayout>




</RelativeLayout>